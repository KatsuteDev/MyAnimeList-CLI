<nav class="min-w-[200px] sticky top-0 p-8">
    <ul>
        <li>
            <a href="/" class="flex text-white text-sm hover:underline">
                <h5 class="font-mono">Quick Start</h5>
            </a>
        </li>
        {% for top in site.data.navigation %}
            {% assign k = top | first %}
            {% assign v = top | last %}
            <li class="mt-8">
                <a href="/{% if k != "mal" %}mal_{% endif %}{{ k }}" class="flex text-white text-sm hover:underline">
                    <h5 class="font-mono">{{ k }}</h5>
                </a>
            </li>
            {% for sub in v %}
                <li class="mt-1">
                    <a
                        href="/{% if k != "mal" %}mal_{% endif %}{{ k }}_{{ sub }}"
                        class="flex text-blue-400 text-sm font-mono hover:underline">{{ sub }}</a>
                </li>
            {% endfor %}
        {% endfor %}
    </ul>
</nav>